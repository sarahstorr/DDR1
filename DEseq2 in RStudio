plotCounts(DESeq_dataset, gene= 'ENST00000404138.5', intgroup='conditions')


#ID mapping to gene names
listMarts()
ensembl100 =useEnsembl(biomart="ensembl", version=100)
view(listDatasets(ensembl100))
ensembl100=useDataset("hsapiens_gene_ensembl", mart=ensembl100)

ensembl=useMart('ensembl')
View(listDatasets(ensembl))
ensembl=useDataset("hsapiens_gene_ensembl", mart=ensembl)
View(listAttributes(ensembl))

#get IDs on filtered tables (or other results)

updated_df1 = rownames_to_column(filter_df1)
colnames(updated_df1)[colnames(updated_df1)=="rowname"]<-"ensembl_transcript_id_version"
updated_df1


#get annotations - choose mark (ensembl100)
annotation = getBM(attributes = c('ensembl_transcript_id_version',
                                  'chromosome_name', 'start_position',
                                  'end_position', 'strand', 'gene_biotype',
                                  'external_gene_name', 'description'),
                   filters = c('ensembl_transcript_id_version'),
                   values = updated_df1$ensembl_transcript_id_version,
                   mart = ensembl100)

#join results with biomaRt info
View(annotation)
annotated_df = left_join(updated_df1, annotation,
                         by=c("ensembl_transcript_id_version"="ensembl_transcript_id_version"))
#refilter annotated table
anno_df2=annotated_df[annotated_df$padj<0.05,]
anno_df3=anno_df2[abs(anno_df2$log2FoldChange) >1,]

#prepare matrix for heatmaps
dets = anno_df3$ensembl_transcript_id_version
dim(dets)
dim(anno_df3)
dim(vst)
vst_mat = assay(vst)
dim(vst_mat)
data_for_hm = vst_mat[dets,]
rownames(data_for_hm)=anno_df3$external_gene_name
dim(data_for_hm)

#plot heat map
#choose colours
display.brewer.all()

#set colours
pallete=colorRampPalette(rev(brewer.pal(n=7, name = "RdYlBu")))(100)

pheatmap(data_for_hm, fontsize=5, fontsize_row=3, scale='row',
         color=pallete,
         cutree_cols=2,
         cutree_rows=2)

#redraw heatmap with top 50 significant genes

### --- 1. Select top 50 significant genes ---
sort_anno_df3 <- anno_df3[order(anno_df3$padj), ]
anno_df3filter <- sort_anno_df3 %>% slice_head(n = 50)

### --- 2. Extract transcript IDs ---
dets2 <- anno_df3filter$ensembl_transcript_id_version

### --- 3. Extract VST matrix ---
vst_mat <- assay(vst)

### --- 4. Remove transcript version numbers ---
dets2_clean <- sub("\\..*", "", dets2)
rownames(vst_mat) <- sub("\\..*", "", rownames(vst_mat))

### --- 5. Subset VST matrix for top 50 transcripts ---
data_for_hm2 <- vst_mat[dets2_clean, ]

### --- 6. Rename rows using gene names, fallback to ENST if NA ---
rownames(data_for_hm2) <- ifelse(
  is.na(anno_df3filter$external_gene_name) | anno_df3filter$external_gene_name == "",
  dets2_clean,
  anno_df3filter$external_gene_name
)

### --- 7. Rename columns for samples ---
colnames(data_for_hm2) <- c("C1_Control", "C2_Control", "C3_Control",
                            "C4_Knockdown", "C5_Knockdown", "C6_Knockdown")

### --- 8. Create column annotation for conditions ---
annotation_col <- data.frame(
  Condition = factor(c("Control", "Control", "Control",
                       "Knockdown", "Knockdown", "Knockdown"))
)
rownames(annotation_col) <- colnames(data_for_hm2)

### --- 9. Define heatmap colours ---
pallete <- colorRampPalette(
  rev(brewer.pal(n = 7, name = "RdYlBu"))
)(100)

### --- 10. Plot heatmap (no clustering) ---
pheatmap(
  data_for_hm2,
  fontsize = 10,
  fontsize_row = 8,
  scale = "row",
  color = pallete,
  cluster_cols = FALSE,   # turn off column clustering
  cluster_rows = FALSE,   # turn off row clustering
  annotation_col = annotation_col
)


# --- 1. Prepare DE gene list (all DE transcripts) ---
# Use all significant transcripts: padj < 0.05 and |log2FC| > 1
de_transcripts <- anno_df3$ensembl_transcript_id_version

# Remove any NAs
de_transcripts <- de_transcripts[!is.na(de_transcripts)]

# --- 2. Map DE transcripts to Entrez IDs ---
entrez_gene <- getBM(
  attributes = c('ensembl_transcript_id_version', 'entrezgene_id'),
  filters = c('ensembl_transcript_id_version'),
  values = de_transcripts,
  mart = ensembl100  # your biomaRt object
)

# Keep only valid mappings
entrez_gene <- entrez_gene %>% filter(!is.na(entrezgene_id))
ent_gene_list <- as.character(entrez_gene$entrezgene_id)

# --- 3. Define background universe (all expressed transcripts) ---
all_transcripts <- rownames(DESeq_dataset)
all_transcripts <- all_transcripts[!is.na(all_transcripts)]

ent_uni <- getBM(
  attributes = c('ensembl_transcript_id_version', 'entrezgene_id'),
  filters = c('ensembl_transcript_id_version'),
  values = all_transcripts,
  mart = ensembl100
)

ent_uni <- ent_uni %>% filter(!is.na(entrezgene_id))
ent_uni_list <- as.character(ent_uni$entrezgene_id)

# --- 4. Run GO enrichment (Biological Process) ---
ego <- enrichGO(
  gene = ent_gene_list,
  OrgDb = org.Hs.eg.db,
  ont = "BP",
  universe = ent_uni_list,
  readable = TRUE,       # converts Entrez IDs to gene symbols
  pvalueCutoff = 0.05,
  qvalueCutoff = 0.2
)

# --- 5. Visualize enrichment ---
# Top 20 GO terms as barplot
barplot(ego, showCategory = 20, title = "GO Biological Process Enrichment")

# Dotplot
dotplot(ego, showCategory = 20, title = "GO Biological Process Enrichment")

# Category-gene network (top 5 GO terms)
cnetplot(ego, showCategory = 5, foldChange = NULL)

# GO plot (detailed DAG visualization)
goplot(ego)

# Save updated_df3 as Excel
write_xlsx(updated_df3, path = "DET.xlsx")

